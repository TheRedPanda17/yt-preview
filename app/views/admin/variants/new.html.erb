<div class="mb-6">
  <%= link_to "&larr; Back to #{@video.working_title}".html_safe, admin_video_path(@video), class: "text-sm text-gray-500 hover:text-gray-700" %>
</div>
<h1 class="text-2xl font-bold text-gray-900 mb-6">Add Variant</h1>

<%= form_with model: @variant, url: admin_video_variants_path(@video), class: "space-y-4 max-w-lg" do |f| %>
  <% if @variant.errors.any? %>
    <div class="p-3 bg-red-50 border border-red-200 text-red-800 rounded-lg text-sm">
      <ul class="list-disc list-inside">
        <% @variant.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, "Variant Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :name, required: true, autofocus: true, placeholder: 'e.g. "Dramatic Style" or "Variant A"', class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 px-3 py-2 border" %>
    <p class="mt-1 text-xs text-gray-500">A label for this group of title/thumbnail combinations.</p>
  </div>

  <div class="pt-2">
    <%= f.submit "Create Variant", class: "bg-red-600 text-white px-5 py-2 rounded-lg text-sm font-medium hover:bg-red-700 transition cursor-pointer" %>
  </div>
<% end %>
