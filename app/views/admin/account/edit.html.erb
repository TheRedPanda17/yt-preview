<div class="max-w-md mx-auto mt-8">
  <h1 class="text-2xl font-bold text-gray-900 mb-6">Account Settings</h1>

  <%= form_with model: @admin, url: admin_account_path, scope: :admin_user, method: :patch, class: "space-y-4" do |f| %>
    <% if @admin.errors.any? %>
      <div class="p-3 bg-red-50 border border-red-200 text-red-800 rounded-lg text-sm">
        <ul class="list-disc list-inside">
          <% @admin.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :yt_username, "YouTube Channel Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :yt_username, required: true, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 px-3 py-2 border" %>
    </div>

    <div>
      <%= f.label :profile_picture, "Profile Picture", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <% if @admin.avatar_url %>
        <div class="mb-2 flex items-center gap-3">
          <img src="<%= @admin.avatar_url %>" class="w-12 h-12 rounded-full" alt="" referrerpolicy="no-referrer">
          <span class="text-xs text-gray-500">Current picture</span>
        </div>
      <% end %>
      <%= f.file_field :profile_picture, accept: "image/*", class: "w-full text-sm text-gray-500 file:mr-3 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-medium file:bg-red-50 file:text-red-700 hover:file:bg-red-100 file:cursor-pointer" %>
      <p class="mt-1 text-xs text-gray-500">Upload a new profile picture.</p>
    </div>

    <div>
      <%= f.label :yt_profile_picture_url, "Or Profile Picture URL", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.url_field :yt_profile_picture_url, placeholder: "https://...", class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 px-3 py-2 border" %>
      <p class="mt-1 text-xs text-gray-500">Fallback URL if no file is uploaded.</p>
    </div>

    <div>
      <%= f.submit "Save Changes", class: "w-full bg-red-600 text-white py-2.5 rounded-lg font-medium hover:bg-red-700 transition cursor-pointer" %>
    </div>
  <% end %>

  <%= link_to "&larr; Back to videos".html_safe, admin_videos_path, class: "block mt-4 text-sm text-gray-500 hover:text-gray-700 text-center" %>
</div>
