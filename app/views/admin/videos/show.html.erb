<!-- Share with Recipients -->
<% video_shares = @video.video_shares.includes(:recipient).order("recipients.name") %>
<%
  # Precompute vote progress for summary
  variants_with_pairs = @video.variants.select { |v| v.title_thumbnail_pairs.any? }
  total_pair_slots = variants_with_pairs.size
  total_variant_count_for_summary = @video.variants.size
  votes_all_done = 0
  votes_in_progress = 0
  votes_not_started = 0
  video_shares.each do |share|
    name = share.recipient.name
    vr_count = @video.variant_votes.count { |v| v.voter_name == name }
    has_all_variants = vr_count == total_variant_count_for_summary && total_variant_count_for_summary > 0
    pv_cast = variants_with_pairs.count { |v| v.pair_votes.any? { |pv| pv.voter_name == name } }
    if has_all_variants && pv_cast == total_pair_slots && total_pair_slots > 0
      votes_all_done += 1
    elsif vr_count > 0 || pv_cast > 0
      votes_in_progress += 1
    else
      votes_not_started += 1
    end
  end
%>
<details class="bg-white border border-gray-200 rounded-xl overflow-hidden mb-8 group/details">
  <summary class="px-5 py-4 bg-gray-50 flex items-center justify-between cursor-pointer select-none list-none [&::-webkit-details-marker]:hidden hover:bg-gray-100 transition">
    <div class="flex items-center gap-3">
      <svg class="w-4 h-4 text-gray-400 transition-transform group-open/details:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
      <div>
        <h3 class="text-sm font-semibold text-gray-900">Shared With</h3>
        <p class="text-xs text-gray-500 mt-0.5">
          <% if video_shares.any? %>
            <%= video_shares.size %> recipient<%= video_shares.size == 1 ? '' : 's' %>
          <% else %>
            No one yet
          <% end %>
        </p>
      </div>
    </div>
    <div class="flex items-center gap-3">
      <% if video_shares.any? %>
        <div class="flex items-center gap-1.5" onclick="event.stopPropagation();">
          <% if votes_all_done > 0 %>
            <span class="text-xs font-medium px-2 py-0.5 rounded-full bg-green-100 text-green-700"><%= votes_all_done %> complete</span>
          <% end %>
          <% if votes_in_progress > 0 %>
            <span class="text-xs font-medium px-2 py-0.5 rounded-full bg-amber-100 text-amber-700"><%= votes_in_progress %> in progress</span>
          <% end %>
          <% if votes_not_started > 0 %>
            <span class="text-xs font-medium px-2 py-0.5 rounded-full bg-gray-100 text-gray-500"><%= votes_not_started %> pending</span>
          <% end %>
        </div>
      <% end %>
      <%= link_to "Manage Recipients", admin_recipients_path, class: "text-xs text-blue-600 hover:text-blue-800 font-medium", onclick: "event.stopPropagation();" %>
    </div>
  </summary>

  <div class="px-5 py-4 border-t border-gray-200">
    <!-- Share with existing recipient -->
    <% unshared_recipients = current_admin.recipients.where.not(id: @video.recipients.select(:id)).order(:name) %>
    <% if unshared_recipients.any? %>
      <div class="flex flex-wrap gap-2 mb-4">
        <% unshared_recipients.each do |recipient| %>
          <%= button_to admin_video_video_shares_path(@video, recipient_id: recipient.id), method: :post, class: "inline-flex items-center gap-1.5 text-sm bg-gray-100 text-gray-700 px-3 py-1.5 rounded-full hover:bg-blue-50 hover:text-blue-700 transition cursor-pointer" do %>
            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" /></svg>
            <%= recipient.name %>
          <% end %>
        <% end %>
      </div>
    <% elsif current_admin.recipients.empty? %>
      <p class="text-sm text-gray-400 mb-4">
        No recipients yet. <%= link_to "Add recipients", admin_recipients_path, class: "text-blue-600 hover:text-blue-800" %> first, then share this video with them.
      </p>
    <% end %>

    <!-- Already shared -->
    <% if video_shares.any? %>
      <div class="divide-y divide-gray-100">
        <% video_shares.each do |share| %>
          <% recipient = share.recipient %>
          <% voting_url = share.preview_url(request) %>
          <% voting_message = voting_url %>
          <% video_message = @video.youtube_url.present? ? "#{@video.youtube_url}#{@video.share_message.present? ? "\n\n#{@video.share_message}" : ''}" : nil %>
          <div class="flex items-center justify-between py-3 group">
            <div class="flex items-center gap-3 flex-1 min-w-0">
              <div class="w-8 h-8 rounded-full bg-purple-600 flex items-center justify-center text-white text-sm font-medium flex-shrink-0">
                <%= recipient.name[0].upcase %>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900"><%= recipient.name %></p>
                <div class="flex items-center gap-2 mt-1">
                  <!-- Share voting URL button (always visible) -->
                  <button
                    type="button"
                    onclick="shareWithFeedback(this, '<%= j(recipient.share_url.to_s) %>', '<%= j(voting_message) %>')"
                    class="inline-flex items-center gap-1 text-xs font-medium text-blue-600 hover:text-blue-800 bg-blue-50 hover:bg-blue-100 px-2 py-1 rounded-md transition cursor-pointer"
                    title="Share voting link with <%= recipient.name %>"
                  >
                    <svg class="w-3.5 h-3.5 share-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" /></svg>
                    <svg class="w-3.5 h-3.5 check-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                    <span class="btn-label">Vote</span>
                  </button>
                  <!-- Share video URL button (only if recipient has share URL and video has YouTube URL) -->
                  <% if recipient.share_url.present? && video_message.present? %>
                    <button
                      type="button"
                      onclick="shareWithFeedback(this, '<%= j(recipient.share_url.to_s) %>', '<%= j(video_message) %>')"
                      class="inline-flex items-center gap-1 text-xs font-medium text-red-600 hover:text-red-800 bg-red-50 hover:bg-red-100 px-2 py-1 rounded-md transition cursor-pointer"
                      title="Share video link with <%= recipient.name %>"
                    >
                      <svg class="w-3.5 h-3.5 share-icon" fill="currentColor" viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 00-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 00.502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 002.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 002.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
                      <svg class="w-3.5 h-3.5 check-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                      <span class="btn-label">Video</span>
                    </button>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="flex items-center gap-2 ml-3">
              <%
                name = recipient.name
                variant_rank_count = @video.variant_votes.count { |v| v.voter_name == name }
                total_variant_count = @video.variants.size
                has_variant_rankings = variant_rank_count == total_variant_count && total_variant_count > 0
                variants_with_pairs = @video.variants.select { |v| v.title_thumbnail_pairs.any? }
                pair_votes_cast = variants_with_pairs.count { |v| v.pair_votes.any? { |pv| pv.voter_name == name } }
                total_pair_slots = variants_with_pairs.size
                all_done = has_variant_rankings && pair_votes_cast == total_pair_slots && total_pair_slots > 0
                has_any_vote = variant_rank_count > 0 || pair_votes_cast > 0
              %>
              <% if all_done %>
                <span class="text-xs bg-green-100 text-green-700 px-2 py-0.5 rounded-full font-medium">All done</span>
              <% elsif has_any_vote %>
                <div class="flex items-center gap-1.5">
                  <span class="text-xs font-medium px-2 py-0.5 rounded-full <%= has_variant_rankings ? 'bg-green-100 text-green-700' : 'bg-amber-100 text-amber-700' %>">
                    Variants: <%= variant_rank_count %>/<%= total_variant_count %>
                  </span>
                  <span class="text-xs font-medium px-2 py-0.5 rounded-full <%= pair_votes_cast == total_pair_slots ? 'bg-green-100 text-green-700' : 'bg-amber-100 text-amber-700' %>">
                    Pairs: <%= pair_votes_cast %>/<%= total_pair_slots %>
                  </span>
                </div>
              <% else %>
                <span class="text-xs bg-gray-100 text-gray-500 px-2 py-0.5 rounded-full">Not yet voted</span>
              <% end %>
              <%= button_to admin_video_video_share_path(@video, share), method: :delete, class: "text-gray-300 hover:text-red-500 transition p-1 cursor-pointer", data: { turbo_confirm: "Remove #{recipient.name}'s access? Their votes will remain." } do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <% if current_admin.recipients.any? %>
        <p class="text-sm text-gray-400 text-center py-4">Not shared with anyone yet. Click a name above to share.</p>
      <% end %>
    <% end %>
  </div>
