<div class="mb-6 flex justify-between items-start">
  <div>
    <%= link_to "&larr; Back to videos".html_safe, admin_videos_path, class: "text-sm text-gray-500 hover:text-gray-700" %>
    <h1 class="text-2xl font-bold text-gray-900 mt-2"><%= @video.working_title %></h1>
    <p class="text-sm text-gray-500 mt-1">Sample views: <%= @video.sample_views %></p>
  </div>
  <div class="flex gap-2">
    <%= link_to "Edit", edit_admin_video_path(@video), class: "text-sm bg-gray-100 text-gray-700 px-3 py-1.5 rounded-md hover:bg-gray-200 transition" %>
    <%= button_to "Delete", admin_video_path(@video), method: :delete, class: "text-sm bg-red-50 text-red-600 px-3 py-1.5 rounded-md hover:bg-red-100 transition", data: { turbo_confirm: "Delete this video and all its variants?" } %>
  </div>
</div>

<!-- Share Link -->
<div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-8">
  <div class="flex items-center justify-between">
    <div>
      <p class="text-sm font-medium text-blue-900">Share this preview</p>
      <p class="text-xs text-blue-600 mt-0.5">Anyone with this link can view and vote on your variants.</p>
    </div>
    <div class="flex items-center gap-2">
      <code class="text-sm bg-white border border-blue-200 px-3 py-1.5 rounded-md text-blue-800 select-all"><%= @video.share_url(request) %></code>
      <%= link_to "Open Preview", preview_path(@video.share_token), target: "_blank", class: "text-sm bg-blue-600 text-white px-3 py-1.5 rounded-md hover:bg-blue-700 transition" %>
    </div>
  </div>
</div>

<!-- Vote Results Summary -->
<% total_variant_votes = @video.variant_votes.count %>
<% if total_variant_votes > 0 %>
  <div class="bg-white border border-gray-200 rounded-lg p-4 mb-8">
    <h3 class="text-sm font-semibold text-gray-900 mb-3">Vote Results (<%= total_variant_votes %> voter<%= total_variant_votes == 1 ? '' : 's' %>)</h3>
    <div class="space-y-2">
      <% @video.variants.each do |variant| %>
        <% votes = variant.variant_votes.count %>
        <% pct = total_variant_votes > 0 ? (votes.to_f / total_variant_votes * 100).round : 0 %>
        <div class="flex items-center gap-3">
          <span class="text-sm text-gray-700 w-32 truncate font-medium"><%= variant.name %></span>
          <div class="flex-1 bg-gray-100 rounded-full h-5 overflow-hidden">
            <div class="bg-red-500 h-full rounded-full transition-all" style="width: <%= pct %>%"></div>
          </div>
          <span class="text-sm text-gray-600 w-16 text-right"><%= votes %> (<%= pct %>%)</span>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<!-- Variants -->
<div class="flex justify-between items-center mb-4">
  <h2 class="text-lg font-semibold text-gray-900">Variants</h2>
  <%= link_to "Add Variant", new_admin_video_variant_path(@video), class: "text-sm bg-red-600 text-white px-3 py-1.5 rounded-md hover:bg-red-700 transition" %>
</div>

<% if @video.variants.empty? %>
  <div class="text-center py-12 bg-white rounded-xl border border-gray-200">
    <p class="text-gray-500 mb-3">No variants yet</p>
    <p class="text-sm text-gray-400">Create variants to start mixing titles and thumbnails.</p>
  </div>
<% else %>
  <div class="space-y-8">
    <% @video.variants.each do |variant| %>
      <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
        <!-- Variant Header -->
        <div class="flex justify-between items-center px-5 py-3 bg-gray-50 border-b border-gray-200">
          <div class="flex items-center gap-3">
            <h3 class="font-semibold text-gray-900"><%= variant.name %></h3>
            <span class="text-xs text-gray-500"><%= variant.title_thumbnail_pairs.count %> pair<%= variant.title_thumbnail_pairs.count == 1 ? '' : 's' %></span>
            <% if variant.variant_votes.any? %>
              <span class="text-xs bg-red-100 text-red-700 px-2 py-0.5 rounded-full"><%= variant.variant_votes.count %> vote<%= variant.variant_votes.count == 1 ? '' : 's' %></span>
            <% end %>
          </div>
          <div class="flex gap-2">
            <%= link_to "Add Pair", new_admin_video_variant_pair_path(@video, variant), class: "text-xs bg-gray-200 text-gray-700 px-2.5 py-1 rounded-md hover:bg-gray-300 transition" %>
            <%= link_to "Edit", edit_admin_video_variant_path(@video, variant), class: "text-xs text-gray-500 hover:text-gray-700" %>
            <%= button_to "Remove", admin_video_variant_path(@video, variant), method: :delete, class: "text-xs text-red-500 hover:text-red-700", data: { turbo_confirm: "Delete this variant?" } %>
          </div>
        </div>

        <!-- Pairs as YouTube Cards -->
        <div class="p-5">
          <% if variant.title_thumbnail_pairs.empty? %>
            <p class="text-sm text-gray-400 text-center py-4">No title/thumbnail pairs yet. <%= link_to "Add one", new_admin_video_variant_pair_path(@video, variant), class: "text-red-600 hover:text-red-700" %></p>
          <% else %>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
              <% variant.title_thumbnail_pairs.each do |pair| %>
                <div class="group relative">
                  <!-- YouTube Card Preview -->
                  <div class="yt-card">
                    <!-- Thumbnail -->
                    <div class="relative aspect-video bg-gray-200 rounded-xl overflow-hidden">
                      <% if pair.has_thumbnail? %>
                        <% if pair.thumbnail.attached? %>
                          <%= image_tag pair.thumbnail, class: "w-full h-full object-cover" %>
                        <% else %>
                          <img src="<%= pair.thumbnail_url %>" class="w-full h-full object-cover" alt="" loading="lazy">
                        <% end %>
                      <% else %>
                        <div class="w-full h-full flex items-center justify-center text-gray-400">
                          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                          </svg>
                        </div>
                      <% end %>
                    </div>

                    <!-- Info -->
                    <div class="flex gap-3 mt-3">
                      <% if current_admin.yt_profile_picture_url.present? %>
                        <img src="<%= current_admin.yt_profile_picture_url %>" class="w-9 h-9 rounded-full flex-shrink-0" alt="">
                      <% else %>
                        <div class="w-9 h-9 rounded-full bg-red-600 flex items-center justify-center text-white text-sm font-medium flex-shrink-0">
                          <%= current_admin.yt_username[0].upcase %>
                        </div>
                      <% end %>
                      <div class="flex-1 min-w-0">
                        <h4 class="text-sm font-medium text-gray-900 leading-5 line-clamp-2"><%= pair.title %></h4>
                        <p class="text-xs text-gray-500 mt-1"><%= current_admin.yt_username %></p>
                        <p class="text-xs text-gray-500"><%= @video.sample_views %> &middot; 1 hour ago</p>
                      </div>
                    </div>
                  </div>

                  <!-- Pair vote count -->
                  <% if pair.pair_votes.any? %>
                    <div class="mt-1 text-xs text-gray-400"><%= pair.pair_votes.count %> pair vote<%= pair.pair_votes.count == 1 ? '' : 's' %></div>
                  <% end %>

                  <!-- Edit/Delete overlay -->
                  <div class="absolute top-2 right-2 hidden group-hover:flex gap-1">
                    <%= link_to edit_admin_video_variant_pair_path(@video, variant, pair), class: "bg-white/90 backdrop-blur-sm text-gray-700 w-7 h-7 rounded-full flex items-center justify-center hover:bg-white shadow-sm" do %>
                      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" /></svg>
                    <% end %>
                    <%= button_to admin_video_variant_pair_path(@video, variant, pair), method: :delete, class: "bg-white/90 backdrop-blur-sm text-red-600 w-7 h-7 rounded-full flex items-center justify-center hover:bg-white shadow-sm", data: { turbo_confirm: "Delete this pair?" } do %>
                      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
