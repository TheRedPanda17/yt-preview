<div class="mb-6 flex justify-between items-start">
  <div>
    <%= link_to "&larr; Back to videos".html_safe, admin_videos_path, class: "text-sm text-gray-500 hover:text-gray-700" %>
    <h1 class="text-2xl font-bold text-gray-900 mt-2"><%= @video.working_title %></h1>
    <p class="text-sm text-gray-500 mt-1">Sample views: <%= @video.sample_views %></p>
  </div>
  <div class="flex gap-2">
    <%= link_to "Edit", edit_admin_video_path(@video), class: "text-sm bg-gray-100 text-gray-700 px-3 py-1.5 rounded-md hover:bg-gray-200 transition" %>
    <%= button_to "Delete", admin_video_path(@video), method: :delete, class: "text-sm bg-red-50 text-red-600 px-3 py-1.5 rounded-md hover:bg-red-100 transition", data: { turbo_confirm: "Delete this video and all its variants?" } %>
  </div>
</div>

<!-- Share Link -->
<div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-8">
  <div class="flex items-center justify-between">
    <div>
      <p class="text-sm font-medium text-blue-900">Share this preview</p>
      <p class="text-xs text-blue-600 mt-0.5">Anyone with this link can view and vote on your variants.</p>
    </div>
    <div class="flex items-center gap-2">
      <code class="text-sm bg-white border border-blue-200 px-3 py-1.5 rounded-md text-blue-800 select-all"><%= @video.share_url(request) %></code>
      <%= link_to "Open Preview", preview_path(@video.share_token), target: "_blank", class: "text-sm bg-blue-600 text-white px-3 py-1.5 rounded-md hover:bg-blue-700 transition" %>
    </div>
  </div>
</div>

<!-- ==================== VOTE RESULTS ==================== -->
<% total_variant_votes = @video.variant_votes.size %>
<% if @all_voters.any? %>
  <div class="bg-white border border-gray-200 rounded-xl overflow-hidden mb-8">
    <div class="px-5 py-4 bg-gray-50 border-b border-gray-200">
      <h3 class="text-sm font-semibold text-gray-900">Vote Results</h3>
      <p class="text-xs text-gray-500 mt-0.5"><%= @all_voters.size %> voter<%= @all_voters.size == 1 ? '' : 's' %></p>
    </div>

    <!-- Variant vote bars -->
    <div class="px-5 py-4 border-b border-gray-200">
      <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-3">Favorite Variant</p>
      <% if total_variant_votes > 0 %>
        <div class="space-y-2">
          <% @video.variants.sort_by { |v| -v.variant_votes.size }.each do |variant| %>
            <% votes = variant.variant_votes.size %>
            <% pct = (votes.to_f / total_variant_votes * 100).round %>
            <% is_leader = votes == @video.variants.map { |v| v.variant_votes.size }.max && votes > 0 %>
            <div class="flex items-center gap-3">
              <span class="text-sm text-gray-700 w-36 truncate font-medium flex items-center gap-1.5">
                <% if is_leader %>
                  <span class="w-2 h-2 rounded-full bg-green-500 flex-shrink-0"></span>
                <% end %>
                <%= variant.name %>
              </span>
              <div class="flex-1 bg-gray-100 rounded-full h-6 overflow-hidden">
                <div class="<%= is_leader ? 'bg-green-500' : 'bg-red-400' %> h-full rounded-full transition-all flex items-center pl-2" style="width: <%= [pct, 2].max %>%">
                  <% if pct >= 15 %>
                    <span class="text-xs text-white font-medium"><%= pct %>%</span>
                  <% end %>
                </div>
              </div>
              <span class="text-sm text-gray-600 w-12 text-right"><%= votes %></span>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-sm text-gray-400">No variant votes yet.</p>
      <% end %>
    </div>

    <!-- Per-variant pair results -->
    <div class="px-5 py-4 border-b border-gray-200">
      <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-3">Favorite Pair Per Variant</p>
      <div class="space-y-4">
        <% @video.variants.each do |variant| %>
          <div>
            <p class="text-sm font-medium text-gray-700 mb-2"><%= variant.name %></p>
            <% total_pair_votes = variant.pair_votes.size %>
            <% if total_pair_votes > 0 %>
              <div class="space-y-1.5">
                <% variant.title_thumbnail_pairs.sort_by { |p| -p.pair_votes.size }.each do |pair| %>
                  <% pvotes = pair.pair_votes.size %>
                  <% ppct = (pvotes.to_f / total_pair_votes * 100).round %>
                  <% is_pair_leader = pvotes == variant.title_thumbnail_pairs.map { |p| p.pair_votes.size }.max && pvotes > 0 %>
                  <div class="flex items-center gap-3">
                    <% if pair.has_thumbnail? %>
                      <div class="w-14 h-8 rounded overflow-hidden bg-gray-200 flex-shrink-0">
                        <% if pair.thumbnail.attached? %>
                          <%= image_tag pair.thumbnail, class: "w-full h-full object-cover" %>
                        <% else %>
                          <img src="<%= pair.thumbnail_url %>" class="w-full h-full object-cover" alt="">
                        <% end %>
                      </div>
                    <% end %>
                    <span class="text-xs text-gray-700 w-40 truncate flex items-center gap-1.5" title="<%= pair.title %>">
                      <% if is_pair_leader %>
                        <span class="w-1.5 h-1.5 rounded-full bg-green-500 flex-shrink-0"></span>
                      <% end %>
                      <%= pair.title %>
                    </span>
                    <div class="flex-1 bg-gray-100 rounded-full h-4 overflow-hidden">
                      <div class="<%= is_pair_leader ? 'bg-green-500' : 'bg-blue-400' %> h-full rounded-full transition-all" style="width: <%= [ppct, 3].max %>%"></div>
                    </div>
                    <span class="text-xs text-gray-500 w-16 text-right"><%= pvotes %> (<%= ppct %>%)</span>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-xs text-gray-400">No pair votes yet.</p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Individual voter breakdown table -->
    <div class="px-5 py-4">
      <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-3">Individual Votes</p>
      <div class="overflow-x-auto">
        <table class="w-full text-sm">
          <thead>
            <tr class="border-b border-gray-100">
              <th class="text-left py-2 pr-4 text-xs font-semibold text-gray-500 w-36">Voter</th>
              <th class="text-left py-2 pr-4 text-xs font-semibold text-gray-500">Favorite Variant</th>
              <% @video.variants.each do |variant| %>
                <th class="text-left py-2 pr-4 text-xs font-semibold text-gray-500">Best in "<%= variant.name %>"</th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @all_voters.each do |name| %>
              <tr class="border-b border-gray-50 hover:bg-gray-50">
                <td class="py-2 pr-4">
                  <div class="flex items-center gap-2">
                    <div class="w-6 h-6 rounded-full bg-purple-600 flex items-center justify-center text-white text-xs font-medium flex-shrink-0">
                      <%= name[0].upcase %>
                    </div>
                    <span class="text-gray-900 font-medium truncate"><%= name %></span>
                  </div>
                </td>
                <td class="py-2 pr-4">
                  <% vv = @video.variant_votes.detect { |v| v.voter_name == name } %>
                  <% if vv %>
                    <% voted_variant = @video.variants.detect { |v| v.id == vv.variant_id } %>
                    <span class="inline-flex items-center gap-1 text-xs bg-red-50 text-red-700 px-2 py-0.5 rounded-full font-medium">
                      <%= voted_variant&.name || '—' %>
                    </span>
                  <% else %>
                    <span class="text-xs text-gray-300">—</span>
                  <% end %>
                </td>
                <% @video.variants.each do |variant| %>
                  <td class="py-2 pr-4">
                    <% pv = variant.pair_votes.detect { |v| v.voter_name == name } %>
                    <% if pv %>
                      <% voted_pair = variant.title_thumbnail_pairs.detect { |p| p.id == pv.title_thumbnail_pair_id } %>
                      <% if voted_pair %>
                        <span class="text-xs text-gray-700 truncate block max-w-[200px]" title="<%= voted_pair.title %>"><%= truncate(voted_pair.title, length: 40) %></span>
                      <% else %>
                        <span class="text-xs text-gray-300">—</span>
                      <% end %>
                    <% else %>
                      <span class="text-xs text-gray-300">—</span>
                    <% end %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>

<!-- ==================== VARIANTS ==================== -->
<div class="flex justify-between items-center mb-4">
  <h2 class="text-lg font-semibold text-gray-900">Variants</h2>
  <%= link_to "Add Variant", new_admin_video_variant_path(@video), class: "text-sm bg-red-600 text-white px-3 py-1.5 rounded-md hover:bg-red-700 transition" %>
</div>

<% if @video.variants.empty? %>
  <div class="text-center py-12 bg-white rounded-xl border border-gray-200">
    <p class="text-gray-500 mb-3">No variants yet</p>
    <p class="text-sm text-gray-400">Create variants to start mixing titles and thumbnails.</p>
  </div>
<% else %>
  <div class="space-y-8">
    <% @video.variants.each do |variant| %>
      <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
        <!-- Variant Header -->
        <div class="flex justify-between items-center px-5 py-3 bg-gray-50 border-b border-gray-200">
          <div class="flex items-center gap-3">
            <h3 class="font-semibold text-gray-900"><%= variant.name %></h3>
            <span class="text-xs text-gray-500"><%= variant.title_thumbnail_pairs.size %> pair<%= variant.title_thumbnail_pairs.size == 1 ? '' : 's' %></span>
            <% if variant.variant_votes.any? %>
              <span class="text-xs bg-red-100 text-red-700 px-2 py-0.5 rounded-full"><%= variant.variant_votes.size %> variant vote<%= variant.variant_votes.size == 1 ? '' : 's' %></span>
            <% end %>
          </div>
          <div class="flex gap-2">
            <%= link_to "Add Pair", new_admin_video_variant_pair_path(@video, variant), class: "text-xs bg-gray-200 text-gray-700 px-2.5 py-1 rounded-md hover:bg-gray-300 transition" %>
            <%= link_to "Edit", edit_admin_video_variant_path(@video, variant), class: "text-xs text-gray-500 hover:text-gray-700" %>
            <%= button_to "Remove", admin_video_variant_path(@video, variant), method: :delete, class: "text-xs text-red-500 hover:text-red-700", data: { turbo_confirm: "Delete this variant?" } %>
          </div>
        </div>

        <!-- Pairs as YouTube Cards -->
        <div class="p-5">
          <% if variant.title_thumbnail_pairs.empty? %>
            <p class="text-sm text-gray-400 text-center py-4">No title/thumbnail pairs yet. <%= link_to "Add one", new_admin_video_variant_pair_path(@video, variant), class: "text-red-600 hover:text-red-700" %></p>
          <% else %>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
              <% pair_max_votes = variant.title_thumbnail_pairs.map { |p| p.pair_votes.size }.max || 0 %>
              <% variant.title_thumbnail_pairs.each do |pair| %>
                <% pair_votes = pair.pair_votes.size %>
                <% is_pair_leader = pair_votes == pair_max_votes && pair_votes > 0 %>
                <div class="group relative">
                  <!-- Leader badge -->
                  <% if is_pair_leader %>
                    <div class="absolute -top-2 -left-2 z-10 bg-green-500 text-white text-xs font-bold px-2 py-0.5 rounded-full shadow-sm flex items-center gap-1">
                      <svg class="w-3 h-3" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/></svg>
                      Leading
                    </div>
                  <% end %>

                  <!-- YouTube Card Preview -->
                  <div class="yt-card">
                    <!-- Thumbnail -->
                    <div class="relative aspect-video bg-gray-200 rounded-xl overflow-hidden">
                      <% if pair.has_thumbnail? %>
                        <% if pair.thumbnail.attached? %>
                          <%= image_tag pair.thumbnail, class: "w-full h-full object-cover" %>
                        <% else %>
                          <img src="<%= pair.thumbnail_url %>" class="w-full h-full object-cover" alt="" loading="lazy">
                        <% end %>
                      <% else %>
                        <div class="w-full h-full flex items-center justify-center text-gray-400">
                          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                          </svg>
                        </div>
                      <% end %>
                    </div>

                    <!-- Info -->
                    <div class="flex gap-3 mt-3">
                      <% if current_admin.yt_profile_picture_url.present? %>
                        <img src="<%= current_admin.yt_profile_picture_url %>" class="w-9 h-9 rounded-full flex-shrink-0" alt="">
                      <% else %>
                        <div class="w-9 h-9 rounded-full bg-red-600 flex items-center justify-center text-white text-sm font-medium flex-shrink-0">
                          <%= current_admin.yt_username[0].upcase %>
                        </div>
                      <% end %>
                      <div class="flex-1 min-w-0">
                        <h4 class="text-sm font-medium text-gray-900 leading-5 line-clamp-2"><%= pair.title %></h4>
                        <p class="text-xs text-gray-500 mt-1"><%= current_admin.yt_username %></p>
                        <p class="text-xs text-gray-500"><%= @video.sample_views %> &middot; 1 hour ago</p>
                      </div>
                    </div>
                  </div>

                  <!-- Pair vote count -->
                  <div class="mt-2 flex items-center gap-2">
                    <span class="text-xs font-medium <%= pair_votes > 0 ? 'text-gray-700' : 'text-gray-400' %>"><%= pair_votes %> vote<%= pair_votes == 1 ? '' : 's' %></span>
                    <% if pair_votes > 0 %>
                      <span class="text-xs text-gray-400">
                        (<%= pair.pair_votes.map(&:voter_name).sort.join(", ") %>)
                      </span>
                    <% end %>
                  </div>

                  <!-- Edit/Delete overlay -->
                  <div class="absolute top-2 right-2 hidden group-hover:flex gap-1">
                    <%= link_to edit_admin_video_variant_pair_path(@video, variant, pair), class: "bg-white/90 backdrop-blur-sm text-gray-700 w-7 h-7 rounded-full flex items-center justify-center hover:bg-white shadow-sm" do %>
                      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" /></svg>
                    <% end %>
                    <%= button_to admin_video_variant_pair_path(@video, variant, pair), method: :delete, class: "bg-white/90 backdrop-blur-sm text-red-600 w-7 h-7 rounded-full flex items-center justify-center hover:bg-white shadow-sm", data: { turbo_confirm: "Delete this pair?" } do %>
                      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
