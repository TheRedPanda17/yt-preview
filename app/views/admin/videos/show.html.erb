<script>
  function shareWithFeedback(btn, shareUrl, message) {
    var shareIcon = btn.querySelector('.share-icon');
    var checkIcon = btn.querySelector('.check-icon');
    var label = btn.querySelector('.btn-label');
    var originalLabel = label.textContent;

    navigator.clipboard.writeText(message).then(function() {
      // Show "Copied!" feedback on the button
      shareIcon.classList.add('hidden');
      checkIcon.classList.remove('hidden');
      label.textContent = 'Copied!';

      // Revert after 2 seconds
      setTimeout(function() {
        shareIcon.classList.remove('hidden');
        checkIcon.classList.add('hidden');
        label.textContent = originalLabel;
      }, 2000);

      // Open Google Messages conversation if URL is set
      if (shareUrl && shareUrl.length > 0) {
        window.open(shareUrl, '_blank');
      }
    }).catch(function() {
      window.prompt('Copy this message:', message);
      if (shareUrl && shareUrl.length > 0) {
        window.open(shareUrl, '_blank');
      }
    });
  }
</script>

