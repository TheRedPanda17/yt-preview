<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Your Video Ideas</h1>
  <%= link_to "New Video", new_admin_video_path, class: "bg-red-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-red-700 transition" %>
</div>

<% if @videos.empty? %>
  <div class="text-center py-16 bg-white rounded-xl border border-gray-200">
    <svg class="mx-auto w-12 h-12 text-gray-300 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
    </svg>
    <p class="text-gray-500 mb-4">No video ideas yet</p>
    <%= link_to "Create your first video", new_admin_video_path, class: "text-red-600 hover:text-red-700 font-medium text-sm" %>
  </div>
<% else %>
  <div class="grid gap-4">
    <% @videos.each do |video| %>
      <%= link_to admin_video_path(video), class: "block bg-white rounded-xl border border-gray-200 p-5 hover:shadow-md transition" do %>
        <div class="flex justify-between items-start">
          <div>
            <h2 class="text-lg font-semibold text-gray-900"><%= video.working_title %></h2>
            <p class="text-sm text-gray-500 mt-1">
              <%= video.variants.count %> variant<%= video.variants.count == 1 ? '' : 's' %> &middot;
              <%= video.sample_views %> &middot;
              Created <%= time_ago_in_words(video.created_at) %> ago
            </p>
          </div>
          <div class="flex items-center gap-2">
            <% if video.ended? %>
              <span class="text-xs font-medium px-2 py-1 rounded-full bg-purple-100 text-purple-700">Ended</span>
            <% else %>
              <span class="text-xs font-medium px-2 py-1 rounded-full bg-green-100 text-green-700">Voting</span>
            <% end %>
            <span class="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded-md font-mono"><%= video.share_token %></span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
