<% content_for(:title) { "#{@video.working_title} - YT Preview" } %>

<div class="min-h-screen bg-[#f1f1f1]" style="font-family: 'Roboto', Arial, sans-serif;">
  <!-- Header bar (YouTube-style) -->
  <div class="bg-white border-b border-[#e5e5e5] sticky top-0 z-40">
    <div class="max-w-6xl mx-auto px-4 h-14 flex items-center justify-between">
      <div class="flex items-center gap-3">
        <svg class="w-7 h-7 text-red-600" viewBox="0 0 24 24" fill="currentColor">
          <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
        </svg>
        <span class="text-base font-medium text-[#0f0f0f]">Preview</span>
      </div>

      <% if voter_name.present? %>
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 rounded-full bg-purple-600 flex items-center justify-center text-white text-sm font-medium">
            <%= voter_name[0].upcase %>
          </div>
          <span class="text-sm text-[#606060]"><%= voter_name %></span>
        </div>
      <% end %>
    </div>
  </div>

  <div class="max-w-6xl mx-auto px-4 py-6">
    <!-- Name prompt -->
    <% unless voter_name.present? %>
      <div class="bg-white rounded-xl border border-[#e5e5e5] p-6 mb-8 max-w-md mx-auto text-center">
        <h2 class="text-lg font-medium text-[#0f0f0f] mb-2">Welcome! Enter your name to vote</h2>
        <p class="text-sm text-[#606060] mb-4">Your name will be saved for this session.</p>
        <%= form_with url: preview_identify_path(@video.share_token), method: :post, class: "flex gap-2" do |f| %>
          <%= f.text_field :voter_name, placeholder: "Your name", required: true, autofocus: true, class: "flex-1 rounded-full border border-[#ccc] px-4 py-2 text-sm focus:outline-none focus:border-blue-500" %>
          <%= f.submit "Continue", class: "bg-[#065fd4] text-white px-5 py-2 rounded-full text-sm font-medium hover:bg-[#0556bf] transition cursor-pointer" %>
        <% end %>
      </div>
    <% end %>

    <!-- Variants -->
    <% @variants.each_with_index do |variant, vi| %>
      <div class="mb-10">
        <!-- Variant header -->
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center gap-3">
            <h2 class="text-base font-medium text-[#0f0f0f]"><%= variant.name %></h2>
            <% variant_vote_count = variant.variant_votes.size %>
            <% if variant_vote_count > 0 %>
              <span class="text-xs bg-[#f1f1f1] text-[#606060] px-2 py-0.5 rounded-full">
                <%= variant_vote_count %> vote<%= variant_vote_count == 1 ? '' : 's' %>
              </span>
            <% end %>
          </div>
          <% if voter_name.present? %>
            <% existing_variant_vote = @video.variant_votes.detect { |v| v.voter_name == voter_name } %>
            <% is_voted = existing_variant_vote&.variant_id == variant.id %>
            <% if is_voted %>
              <span class="inline-flex items-center gap-1.5 text-sm font-medium text-[#065fd4]">
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>
                Your pick
              </span>
            <% else %>
              <%= button_to vote_variant_path(@video.share_token, variant_id: variant.id), method: :post, class: "inline-flex items-center gap-1.5 text-sm font-medium text-[#065fd4] hover:bg-[#def1ff] px-3 py-1.5 rounded-full transition cursor-pointer" do %>
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"/></svg>
                Vote for this variant
              <% end %>
            <% end %>
          <% end %>
        </div>

        <!-- YouTube-style card grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-x-4 gap-y-6">
          <% variant.title_thumbnail_pairs.each do |pair| %>
            <% existing_pair_vote = variant.pair_votes.detect { |v| v.voter_name == voter_name } if voter_name.present? %>
            <% is_pair_voted = existing_pair_vote&.title_thumbnail_pair_id == pair.id if voter_name.present? %>
            <% pair_vote_count = pair.pair_votes.size %>

            <div class="group">
              <!-- Thumbnail -->
              <div class="relative aspect-video bg-[#e5e5e5] rounded-xl overflow-hidden mb-3 cursor-pointer">
                <% if pair.has_thumbnail? %>
                  <% if pair.thumbnail.attached? %>
                    <%= image_tag pair.thumbnail, class: "w-full h-full object-cover", loading: "lazy" %>
                  <% else %>
                    <img src="<%= pair.thumbnail_url %>" class="w-full h-full object-cover" alt="" loading="lazy">
                  <% end %>
                <% else %>
                  <div class="w-full h-full flex items-center justify-center text-[#909090]">
                    <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M21 3H3c-1.11 0-2 .89-2 2v14c0 1.11.89 2 2 2h18c1.11 0 2-.89 2-2V5c0-1.11-.89-2-2-2zm0 16H3V5h18v14zM9.5 13l2.5 3.01L14.5 12l4.5 6H5l4.5-6z"/>
                    </svg>
                  </div>
                <% end %>

                <!-- Hover overlay with vote for pair -->
                <% if voter_name.present? %>
                  <% if is_pair_voted %>
                    <div class="absolute bottom-2 right-2 bg-[#065fd4] text-white text-xs font-medium px-2.5 py-1 rounded-full flex items-center gap-1">
                      <svg class="w-3 h-3" viewBox="0 0 24 24" fill="currentColor"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>
                      Best in variant
                    </div>
                  <% else %>
                    <%= button_to vote_pair_path(@video.share_token, variant_id: variant.id, pair_id: pair.id), method: :post, class: "absolute inset-0 bg-black/0 group-hover:bg-black/30 transition-all flex items-center justify-center opacity-0 group-hover:opacity-100 cursor-pointer" do %>
                      <span class="bg-white/95 backdrop-blur-sm text-[#0f0f0f] text-xs font-medium px-3 py-1.5 rounded-full shadow-sm">
                        Vote best in variant
                      </span>
                    <% end %>
                  <% end %>
                <% end %>
              </div>

              <!-- Video info (YouTube style) -->
              <div class="flex gap-3">
                <!-- Channel avatar -->
                <% if @admin.yt_profile_picture_url.present? %>
                  <img src="<%= @admin.yt_profile_picture_url %>" class="w-9 h-9 rounded-full flex-shrink-0 mt-0.5" alt="">
                <% else %>
                  <div class="w-9 h-9 rounded-full bg-[#ef4444] flex items-center justify-center text-white text-sm font-medium flex-shrink-0 mt-0.5">
                    <%= @admin.yt_username[0].upcase %>
                  </div>
                <% end %>

                <div class="flex-1 min-w-0">
                  <!-- Title -->
                  <h3 class="text-sm font-medium text-[#0f0f0f] leading-5 line-clamp-2 mb-1" style="font-weight: 500;">
                    <%= pair.title %>
                  </h3>
                  <!-- Channel name -->
                  <p class="text-xs text-[#606060] leading-4 flex items-center gap-1">
                    <%= @admin.yt_username %>
                  </p>
                  <!-- Views + time -->
                  <p class="text-xs text-[#606060] leading-4">
                    <%= @video.sample_views %> &middot; 1 hour ago
                  </p>
                </div>
              </div>

              <!-- Pair vote count -->
              <% if pair_vote_count > 0 %>
                <div class="ml-12 mt-1">
                  <span class="text-xs text-[#606060]"><%= pair_vote_count %> pair vote<%= pair_vote_count == 1 ? '' : 's' %></span>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @variants.empty? %>
      <div class="text-center py-20">
        <p class="text-[#606060]">No variants have been added to this preview yet.</p>
      </div>
    <% end %>
  </div>
</div>
