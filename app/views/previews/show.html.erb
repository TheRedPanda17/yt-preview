<% content_for(:title) { "#{@video.working_title} - YT Preview" } %>

<div class="min-h-screen bg-[#f1f1f1]" style="font-family: 'Roboto', Arial, sans-serif;">
  <!-- Header bar (YouTube-style) -->
  <div class="bg-white border-b border-[#e5e5e5] sticky top-0 z-40">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 h-14 flex items-center justify-between">
      <div class="flex items-center gap-3">
        <svg class="w-7 h-7 text-red-600" viewBox="0 0 24 24" fill="currentColor">
          <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
        </svg>
        <span class="text-base font-medium text-[#0f0f0f]">Preview</span>
      </div>

      <div class="flex items-center gap-2">
        <div class="w-8 h-8 rounded-full bg-purple-600 flex items-center justify-center text-white text-sm font-medium">
          <%= @recipient.name[0].upcase %>
        </div>
        <span class="text-sm text-[#606060]"><%= @recipient.name %></span>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 py-6">

    <!-- Voting progress banner -->
    <% if voter_name.present? && @variants.any? %>
      <%
        has_variant_vote = @video.variant_votes.any? { |v| v.voter_name == voter_name }
        voted_variant_ids = @variants.map { |v| v.pair_votes.detect { |pv| pv.voter_name == voter_name } }.compact.map(&:variant_id)
        unvoted_variants = @variants.reject { |v| voted_variant_ids.include?(v.id) }
        all_pairs_voted = unvoted_variants.empty?
        all_done = has_variant_vote && all_pairs_voted
      %>

      <div class="mb-6 rounded-xl border px-5 py-4 flex items-start gap-3
        <%= if all_done
              'bg-green-50 border-green-200'
            elsif has_variant_vote && !all_pairs_voted
              'bg-blue-50 border-blue-200'
            elsif all_pairs_voted && !has_variant_vote
              'bg-amber-50 border-amber-200'
            else
              'bg-white border-[#e5e5e5]'
            end %>">

        <% if all_done %>
          <svg class="w-5 h-5 text-green-600 flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="currentColor"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>
          <div>
            <p class="text-sm font-medium text-green-900">You're all done — thanks for voting!</p>
            <p class="text-xs text-green-700 mt-0.5">You can change your votes at any time by clicking a different option.</p>
          </div>

        <% elsif has_variant_vote && !all_pairs_voted %>
          <svg class="w-5 h-5 text-blue-600 flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M12 2a10 10 0 100 20 10 10 0 000-20z"/></svg>
          <div>
            <p class="text-sm font-medium text-blue-900">Great variant pick! Now choose your favorite pair in each variant.</p>
            <p class="text-xs text-blue-700 mt-0.5">
              Still need your vote:
              <% unvoted_variants.each_with_index do |v, i| %>
                <strong><%= v.name %></strong><%= i < unvoted_variants.size - 1 ? ', ' : '' %>
              <% end %>
            </p>
          </div>

        <% elsif all_pairs_voted && !has_variant_vote %>
          <svg class="w-5 h-5 text-amber-600 flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/></svg>
          <div>
            <p class="text-sm font-medium text-amber-900">You've picked your favorites in each variant — now vote for your overall favorite variant!</p>
            <p class="text-xs text-amber-700 mt-0.5">Scroll through the variants and click "Vote for this variant" on the one you like best.</p>
          </div>

        <% else %>
          <svg class="w-5 h-5 text-[#606060] flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/></svg>
          <div>
            <p class="text-sm font-medium text-[#0f0f0f]">Two things to vote on:</p>
            <ol class="text-xs text-[#606060] mt-1 list-decimal list-inside space-y-0.5">
              <li><strong>Pick your overall favorite variant</strong> — click "Vote for this variant" next to a variant name</li>
              <li><strong>Pick the best pair in each variant</strong> — hover a thumbnail and click "Vote best in variant"</li>
            </ol>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Variants -->
    <% @variants.each_with_index do |variant, vi| %>
      <div class="mb-10">
        <!-- Variant header -->
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center gap-3">
            <h2 class="text-lg font-medium text-[#0f0f0f]"><%= variant.name %></h2>
          </div>
          <% if voter_name.present? %>
            <% existing_variant_vote = @video.variant_votes.detect { |v| v.voter_name == voter_name } %>
            <% is_voted = existing_variant_vote&.variant_id == variant.id %>
            <% if is_voted %>
              <span class="inline-flex items-center gap-1.5 text-sm font-medium text-[#065fd4]">
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>
                Your pick
              </span>
            <% else %>
              <%= button_to vote_variant_path(@video.share_token, @video_share.token, variant_id: variant.id), method: :post, class: "inline-flex items-center gap-1.5 text-sm font-medium text-[#065fd4] hover:bg-[#def1ff] px-3 py-1.5 rounded-full transition cursor-pointer" do %>
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"/></svg>
                Vote for this variant
              <% end %>
            <% end %>
          <% end %>
        </div>

        <!-- YouTube-style card grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-4 gap-y-8">
          <% variant.title_thumbnail_pairs.each do |pair| %>
            <% existing_pair_vote = variant.pair_votes.detect { |v| v.voter_name == voter_name } if voter_name.present? %>
            <% is_pair_voted = existing_pair_vote&.title_thumbnail_pair_id == pair.id if voter_name.present? %>

            <div class="group">
              <!-- Thumbnail -->
              <div class="relative aspect-video bg-[#e5e5e5] rounded-xl overflow-hidden mb-3 cursor-pointer">
                <% if pair.has_thumbnail? %>
                  <% if pair.thumbnail.attached? %>
                    <%= image_tag pair.thumbnail, class: "w-full h-full object-cover", loading: "lazy" %>
                  <% else %>
                    <img src="<%= pair.thumbnail_url %>" class="w-full h-full object-cover" alt="" loading="lazy">
                  <% end %>
                <% else %>
                  <div class="w-full h-full flex items-center justify-center text-[#909090]">
                    <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M21 3H3c-1.11 0-2 .89-2 2v14c0 1.11.89 2 2 2h18c1.11 0 2-.89 2-2V5c0-1.11-.89-2-2-2zm0 16H3V5h18v14zM9.5 13l2.5 3.01L14.5 12l4.5 6H5l4.5-6z"/>
                    </svg>
                  </div>
                <% end %>

                <% if @video.video_duration.present? %>
                  <span class="absolute bottom-1 right-1 bg-black/80 text-white font-medium px-1 rounded z-10" style="font-size: 11px; line-height: 16px; letter-spacing: 0.5px;"><%= @video.video_duration %></span>
                <% end %>

                <!-- Hover overlay with vote for pair -->
                <% if voter_name.present? %>
                  <% if is_pair_voted %>
                    <div class="absolute top-2 left-2 bg-[#065fd4] text-white text-xs font-medium px-2.5 py-1 rounded-full flex items-center gap-1 z-10">
                      <svg class="w-3 h-3" viewBox="0 0 24 24" fill="currentColor"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>
                      Best in variant
                    </div>
                  <% else %>
                    <%= button_to vote_pair_path(@video.share_token, @video_share.token, variant_id: variant.id, pair_id: pair.id), method: :post, class: "absolute inset-0 bg-black/0 group-hover:bg-black/30 transition-all flex items-center justify-center opacity-0 group-hover:opacity-100 cursor-pointer" do %>
                      <span class="bg-white/95 backdrop-blur-sm text-[#0f0f0f] text-xs font-medium px-3 py-1.5 rounded-full shadow-sm">
                        Vote best in variant
                      </span>
                    <% end %>
                  <% end %>
                <% end %>
              </div>

              <!-- Video info (YouTube style) -->
              <div class="flex gap-3">
                <!-- Channel avatar -->
                <% if @admin.avatar_url %>
                  <img src="<%= @admin.avatar_url %>" class="w-9 h-9 rounded-full flex-shrink-0 mt-1" alt="" referrerpolicy="no-referrer">
                <% else %>
                  <div class="w-9 h-9 rounded-full bg-[#ef4444] flex items-center justify-center text-white text-sm font-medium flex-shrink-0 mt-1">
                    <%= @admin.yt_username[0].upcase %>
                  </div>
                <% end %>

                <div class="flex-1 min-w-0">
                  <!-- Title -->
                  <h3 class="text-[#0f0f0f] line-clamp-2 mb-1" style="font-size: 14px; font-weight: 500; line-height: 20px;">
                    <%= pair.title %>
                  </h3>
                  <!-- Channel name -->
                  <p class="text-[#606060] flex items-center gap-1" style="font-size: 12px; line-height: 18px;">
                    <%= @admin.yt_username %>
                  </p>
                  <!-- Views + time -->
                  <p class="text-[#606060]" style="font-size: 12px; line-height: 18px;">
                    <%= @video.sample_views %> &middot; 1 hour ago
                  </p>
                </div>
              </div>

            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @variants.empty? %>
      <div class="text-center py-20">
        <p class="text-[#606060]">No variants have been added to this preview yet.</p>
      </div>
    <% end %>
  </div>
</div>
