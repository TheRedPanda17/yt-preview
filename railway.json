{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "bin/rails_build"
  },
  "deploy": {
    "startCommand": "bundle exec puma -C config/puma.rb",
    "healthcheckPath": "/up",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
